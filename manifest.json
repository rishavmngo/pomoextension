{
  "name": "Pomodoro App",
  "description": "a time management app",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background/main.js",
    "type": "module"
  },
  "permissions": ["storage", "activeTab", "contextMenus", "notifications"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/app_icon.png",
    "32": "icons/app_icon.png",
    "48": "icons/app_icon.png",
    "128": "icons/app_icon.png"
  }
}
